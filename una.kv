#:kivy 2.0.0
<MyLayout>
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        #padding: 50
   
        Image:
            source: './Assets/una.png'
            center: self.parent.center
            allow_stretch: True
        Label:
            text: "Name"
        
            color: (0,0,0,1)
            background_color: (0,0,0,1)
            size_hint: (1, 0.25)
            bold: True
            italic: True
            outline_color: (1,0,0)
            outline_width: 2
            canvas.before:
                Color: 
                    rgba: self.background_color
                Rectangle:
                    size: self.size
                    pos: self.pos
           